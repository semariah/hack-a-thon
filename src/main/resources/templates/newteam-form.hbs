{{#partial "content"}}

    {{#if editTeam}}
        <h1>Edit this Team</h1>
        <form action="/teams/{{editTeam.id}}/update" method="post">
            <div>
                <label for="name">Edit this Team's name</label>
                <input id="name" name="name" type="text" value="{{editTeam.name}}">
                <label for="description">Edit this Team's Description</label>
                <input id="description" name="description" type="text" value="{{editTeam.description}}">

            </div>
            <div>
                <label for="members">Edit this Team's members</label>
                <input id="member1" name="member1" type="text" value="{{editTeam.teamMembers}}>
                <input id="member2" name="member2" type="text" value="{{editTeam.teamMembers}}>

            </div>

        </form>

    {{else}}

    <h1>Add a new Team!</h1>

    {{/if}}

    <form action="/teams/new" method="post">
        <label for="name">Team Name</label>
        <input id="name" name="name" type="text">
        <label for="description">Description</label>
        <input id="description" name="description" type="text">
        <label for="member1">Member1</label>
        <input id="member1" name="member1" type="text">
        <label for="member2">Member2</label>
        <input id="member2" name="member2" type="text">

        <button type="submit" class="btn btn-default">Add Team</button>
    </form>
{{/partial}}

{{> layout.hbs}}
