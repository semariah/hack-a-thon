{{#partial "content"}}
    <p>Team:</p>
    <p>Team name: {{ team.name }}</p>
    <p>Team description: {{ team.description }}</p>
    <h5>Created At: {{ team.createdAt }}</h5>
    <h5>Post status:</h5>
    <p>
        {{#if post.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}
    </p>


    <a href="/teams/{{team.id}}/update">Edit team</a>

{{/partial}}

{{> layout.hbs}}