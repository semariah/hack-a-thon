{{#partial "content"}}
    <p>Team name:</p>
    <p>{{team.name}}</p>
    <p>Team description:</p>
    <p>{{team.description}}</p>
    <p>Team members:</p>
    <p>{{team.teamMembers}}</p>
    <h5>Created At:</h5>
    <p>{{team.createdAt}}</p>
    <h5>Team status:</h5>

    <p>
        {{#if team.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
        {{/if}}

        <a href="/teams/{{team.id}}/update"><button class = "btn btn-primary">Edit team</button></a>

    </p>

{{/partial}}

{{> layout.hbs}}